<Window x:Class="Pongish.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pongish"
        mc:Ignorable="d"
        Title="Game" Height="480" Width="800">
    <Grid>
        <Canvas x:Name="canvas">
        </Canvas>
        <Label x:Name="FPSLabel" Content="Label" Margin="10,10,0,0" Foreground="White"/>
        <StackPanel x:Name="welcomePanel" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome to Your Game" FontSize="24" Margin="0,0,0,20"/>
            <Button Content="Start Game" Width="150" Click="StartGame_Click"/>
            <Button Content="Settings" Width="150" Click="Settings_Click"/>
            <Button Content="Quit" Width="150" Click="Quit_Click"/>
        </StackPanel>
    </Grid>
</Window>
