<UserControl x:Class="Pongish.StartScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pongish"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <Grid>
        <StackPanel x:Name="welcomePanel" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome to Pongish" FontSize="24" Margin="0,0,0,20"/>
            <Button Content="Start Game" Width="150" Click="StartGame_Click"/>
            <Button Content="Settings" Width="150" Click="Settings_Click"/>
            <Button Content="Quit" Width="150" Click="Quit_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
